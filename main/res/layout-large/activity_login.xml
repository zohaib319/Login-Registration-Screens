<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background"
    android:alpha="0.9">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="80dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/username_field"
            android:ems="10"
            android:background="@drawable/rounded_edittext"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:textSize="40sp"
            android:textColor="#333333"
            android:drawablePadding="40dp"
            android:hint="@string/login_emailfield"
            android:textColorHint="#d8d8d8"
            android:layout_below="@+id/imageView"
            android:paddingTop="5dp"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/icon_mail"
            android:fontFamily="sans-serif" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#CCCCCC"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/password_field"
            android:inputType="textPassword"
            android:ems="10"

            android:background="@drawable/rounded_edittextbottom"
            android:textSize="40sp"
            android:textColor="#333333"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:drawablePadding="40dp"
            android:hint="@string/login_passwordfield"
            android:textColorHint="#d8d8d8"
            android:layout_alignTop="@+id/username_field"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="30dp"
            android:drawableLeft="@drawable/icon_pass"

            />

        <Button
            android:text="@string/login_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/login_button"
            android:background="@drawable/rounded_button1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold" />



        <Button
            android:text="@string/signin_social"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/signin_social"
            android:background="@drawable/rounded_button2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:textStyle="normal|bold" />

        <TextView
            android:text="@string/login_instruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="40dp"
            android:textSize="40sp"
            android:textColor="#ffffff"
           android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textAlignment="center"
            android:inputType="text"

            />


    </LinearLayout>

</RelativeLayout>